        <script><![CDATA[var gr = new GlideRecord('x_epats_qhs_qhs_policy');
gr.query();

var today = new GlideDateTime();


while (gr.next()){
	if (gr.u_glide_date_1){
		var gr_date = new GlideDateTime(gr.getValue('u_glide_date_1'));
		
		var dur = GlideDateTime.subtract(gr_date,today);
		
		if (dur.getDayPart()==-2){
			//2 days earlier
			
			gs.eventQueue('x_epats_qhs.due_date.notify',gr,gr.assigned_to.name, 'ΥΠΕΝΘΥΜΙΣΗ');
			
		}
		
		if (dur.getDayPart()==2){
			//2 days after
			
			gs.eventQueue('x_epats_qhs.due_date.notify_late',gr,gr.assigned_to.name, 'ΛΗΞΗ ΠΡΟΘΕΣΜΙΑΣ');
			
		}
		
	}
}]]></script>
